<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mehematay.ui" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>מאימתי</name>
  <description>
    כלי עזר ליהדות ישראל
  </description>
  <author email="amitznati@gmail.com" href="https://github.com/amitznati">
    Amit Znati
