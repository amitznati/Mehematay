  <platform name="ios">
    <allow-intent href="itms:*" />
    <preference name="deployment-target" value="12.0" />
    <allow-intent href="itms-apps:*" />
    <preference name="iosScheme" value="https" />
    <preference name="Hostname" value="mehematay.com" />
    <preference name="customEntryPoint" value="index.html" />
    <content src="index.html" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="UseSwiftLanguageVersion" value="5" />
    <preference name="ContentProtectionPubKeyPath" value="#ios-ContentProtectionPubKeyPath#" />
