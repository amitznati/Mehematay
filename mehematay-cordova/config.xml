  <allow-navigation href="iapp://*/*" />
  <allow-navigation href="file://*/*" />

  <access origin="*" />
  <access origin="iapp://*/*" />
  <access origin="file://*/*" />

  <allow-intent href="http://*/*" />
  <allow-intent href="iapp://*/*" />
  <allow-intent href="file://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">

    <preference name="android-minSdkVersion" value="29" />
    <preference name="AndroidXEnabled" value="true" />
    <preference name="AndroidInsecureFileModeEnabled" value="true" />
    <allow-intent href="market:*" />
    <content src="index.html" />
    <preference name="Scheme" value="file" />
    <preference name="Hostname" value="android_asset" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="customEntryPoint" value="index.html" />
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/ic_launcher.png" />
    <preference name="AndroidWindowSplashScreenAnimationDuration" value="3000" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
      <application android:usesCleartextTraffic="true" />
      <application android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher" />
    </edit-config>

